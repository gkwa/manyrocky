{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices"],
  "packageRules": [
    {
      "matchDepTypes": ["*"],
      "automerge": true,
      "automergeType": "branch",
      "automergeStrategy": "merge-commit",
      "ignoreTests": true
    }
  ],
  "platformAutomerge": true
}
