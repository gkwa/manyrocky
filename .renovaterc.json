{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "packageRules": [
    {
      "matchDepTypes": [
        "*"
      ],
      "automerge": true,
      "automergeType": "branch",
      "automergeStrategy": "fast-forward",
      "ignoreTests": true
    }
  ],
  "platformAutomerge": true
}
